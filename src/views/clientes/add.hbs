<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Nombres"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Apellidos</label>
                            <input class="form-control" type="text" name="apecli" id="apecli" placeholder="Apellidos"
                                required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Nro. DNI</label>
                            <input class="form-control" type="text" name="nrodnicli" id="nrodnicli"
                                placeholder="Nro. DNI" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Nro. Teléfono</label>
                            <input class="form-control" type="text" name="telcli" id="telcli" placeholder="Nro. Célular"
