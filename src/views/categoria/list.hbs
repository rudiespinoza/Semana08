<div class="container" style="margin-top:70px;"></div>
<div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Categorías</h3>

    <div style="padding: 10px;">
        <button class="btn btn-danger"><a class="nav-link link-light" href="/categoria/add"> Nueva Categoría</a></button>
    </div>

    {{#if categorias}}
    <table class="table text-center">
        <thead>
            <tr class="table-dark">
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td>{{nombre}}</td>
                <td>
                    <a href="/categoria/edit/{{id_categoria}}" class="btn btn-warning">Actualizar</a>
                    <a href="/categoria/delete/{{id_categoria}}" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="2">REGISTRO DE CATEGORÍAS</td>
            </tr>
        </tfoot>
    </table>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>No hay categorías registradas</h3>
        </div>
        <div class="card-body">
            <a href="/categoria/add" class="btn btn-primary">Crear Categoría</a>
        </div>
    </div>
    {{/if}}
</div>
