<div class="container" style="margin-top:70px;"></div>
<div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de Proveedores</h3>

    <div style="padding: 10px;">
        <button class="btn btn-danger"><a class="nav-link link-light" href="/proveedor/add"> Nuevo Proveedor</a></button>
    </div>

    {{#if proveedores}}
    <table class="table text-center">
        <thead>
            <tr class="table-dark">
                <th scope="col">Nombre</th>
                <th scope="col">Tel√©fono</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each proveedores}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{telefono}}</td>
                <td>
                    <a href="/proveedor/edit/{{id_proveedor}}" class="btn btn-warning">Actualizar</a>
                    <a href="/proveedor/delete/{{id_proveedor}}" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="3">REGISTRO DE PROVEEDORES</td>
            </tr>
        </tfoot>
    </table>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>No hay proveedores registrados</h3>
        </div>
        <div class="card-body">
            <a href="/proveedor/add" class="btn btn-primary">Crear Proveedor</a>
        </div>
    </div>
    {{/if}}
</div>
